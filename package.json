{
  "name": "revolution",
  "version": "0.0.1",
  "private": true,
  "description": "Next.js Headless CMS Platform on Cloud Run Docker",
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "make dev",
    "dev:frontend": "turbo run dev --filter=frontend-nextjs-headless-cms",
    "dev:backend": "make backend",
    "build": "make build",
    "build:frontend": "turbo run build --filter=frontend-nextjs-headless-cms",
    "build:backend": "make build-backend",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "deploy": "make deploy",
    "deploy:backend": "cd apps/backend && npm run deploy",
    "deploy:frontend": "cd apps/frontend && vercel --prod",
    "clean": "make clean",
    "fresh": "make clean && pnpm install",
    "turbo:version": "pnpm exec turbo --version",
    "turbo:gen": "pnpm exec turbo gen",
    "docs:build-toc": "tsx tools/docs-index.ts",
    "docs:validate": "tsx tools/docs-index.ts && echo 'OK'",
    "docs:sync": "./scripts/sync-docs-to-icloud.sh",
    "docs:create": "./scripts/create-doc-and-sync.sh"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.4",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0"
  }
}
