# ======================================
# Google Cloud Platform Configuration
# ======================================

# プロジェクト設定
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=asia-northeast1

# 認証情報
# サービスアカウントキーファイルへのパス
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# ======================================
# WordPress on Cloud Run Configuration
# ======================================

# Cloud Run設定
CLOUD_RUN_SERVICE_NAME=dev-crd-wordpress-app
CLOUD_RUN_ARTIFACT_REPO=dev-crd-wordpress-repo

# Cloud Storage設定
GCS_BUCKET_NAME=your-project-id-media

# Cloud SQL設定
CLOUD_SQL_INSTANCE_NAME=dev-crd-wordpress-db
CLOUD_SQL_DATABASE_NAME=dev-crd-wordpress
CLOUD_SQL_USER=thanks2music

# ======================================
# MCP Server Configuration
# ======================================

# サーバー設定
MCP_SERVER_NAME=gcp-wordpress-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_LOG_LEVEL=info

# 機能フラグ
ENABLE_BACKUP_FEATURES=true
ENABLE_DEPLOYMENT_FEATURES=true
ENABLE_MONITORING_FEATURES=true

# ======================================
# Optional: Development Settings
# ======================================

# 開発環境設定
NODE_ENV=development
DEBUG=mcp:*