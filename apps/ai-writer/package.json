{
  "name": "@revolution/ai-writer",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --port 7777",
    "dev:express": "tsx watch src/index.ts",
    "build": "NODE_ENV=production next build",
    "start": "next start --port 7777",
    "restart": "lsof -ti :7777 | xargs kill -9 2>/dev/null; sleep 1 && next dev --port 7777",
    "stop": "lsof -ti :7777 | xargs kill -9 2>/dev/null && echo '✓ Next.js stopped on port 7777' || echo '✗ No process found on port 7777'",
    "deploy": "./scripts/deploy.sh",
    "docker:build": "docker build --platform linux/amd64 -t revo-ai-writer:local .",
    "docker:run": "docker run -p 8080:8080 --env-file .env.local revo-ai-writer:local",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:emulator": "firebase emulators:exec 'npm test'",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration",
    "emulators:start": "firebase emulators:start",
    "emulators:export": "firebase emulators:export ./test-data",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "admin:setup": "tsx lib/firebase/admin-setup.ts setup",
    "admin:list": "tsx lib/firebase/admin-setup.ts list",
    "admin:remove": "tsx lib/firebase/admin-setup.ts remove",
    "debug:mdx": "tsx scripts/debug-mdx-url.ts",
    "generate:article-index": "tsx scripts/generate-article-index.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.63.0",
    "@aws-sdk/client-s3": "^3.948.0",
    "@extractus/article-extractor": "^8.0.20",
    "@google-cloud/secret-manager": "^5.6.0",
    "@google/generative-ai": "^0.24.1",
    "@octokit/plugin-retry": "^8.0.3",
    "@octokit/plugin-throttling": "^11.0.3",
    "@octokit/rest": "^22.0.1",
    "@types/js-yaml": "^4.0.9",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express": "^5.1.0",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0",
    "form-data": "^4.0.4",
    "jose": "^6.1.0",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.544.0",
    "next": "16.1.3",
    "openai": "^6.9.1",
    "pino": "^9.11.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rss-parser": "^3.13.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "ulid": "^3.0.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@firebase/testing": "^0.20.11",
    "@jest/globals": "^30.2.0",
    "@jest/types": "^30.2.0",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.3",
    "@types/form-data": "^2.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "autoprefixer": "^10.4.23",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "eslint-plugin-prettier": "^5.5.5",
    "firebase-tools": "^14.17.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "msw": "^2.12.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "undici": "^7.16.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.8",
      "@types/react-dom": "19.2.3"
    }
  }
}
