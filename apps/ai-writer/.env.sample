# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here
NEXT_PUBLIC_ALLOWED_EMAILS=user1@example.com,user2@example.com

# Firebase Admin SDK (Server-side only)
FIREBASE_PROJECT_ID=your_project_id_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/serviceAccountKey.json

# WordPress GraphQL Endpoint
NEXT_PUBLIC_WP_ENDPOINT=https://your-wordpress-url/graphql

# Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Admin Email Addresses for Custom Claims (comma-separated)
# These users will have full admin privileges
ADMIN_EMAILS=user1@example.com,user2@example.com

