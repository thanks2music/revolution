#!/bin/sh

# Check if any docs or .claude markdown files were changed in the last commit
if git diff-tree --no-commit-id --name-only -r HEAD | grep -E '^(docs/.*\.md|\.claude/.*\.md)$' > /dev/null; then
  echo "📝 Markdown files changed in docs or .claude, syncing to iCloud..."
  ./scripts/sync-docs-to-icloud.sh
else
  echo "ℹ️  No docs markdown files changed, skipping sync"
fi
